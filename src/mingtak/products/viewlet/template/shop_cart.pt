<div class="mini-cart-sub" id='shop-cart' style='display: none'>
<?python
from plone import api
abs_url = api.portal.get().absolute_url()
?>
    <div class="cart-product">
        <div id="product_area">
            <div class="single-cart" tal:repeat="item view/data">
                <div class="cart-img">
                    <a href="${item/absolute_url}">
                        <img src="${item/absolute_url}/@@images/image_1/thumb">
                    </a>
                </div>
                <div class="cart-info">
                    <h5>
                        <a href="${item/absolute_url}">${item/title}</a>
                    </h5>
                    <span class='discount_price'>NT${item/salePrice}</span>
                    <del>${item/listPrice}</del>
                </div>
            </div>
        </div>
        <div class="cart-totals">
            <h5>
                Total <span style="color: rgb(246, 147, 31);" id='cart_money'>${view/cart_money}</span>
                <span>NT</span>
            </h5>
        </div>
        <button class="cart-checkout" onclick="location.href='${abs_url}/check_out'">Check Out</button>
    </div>
</div>